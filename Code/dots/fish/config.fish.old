# set -Ua fish_user_paths /usr/local/MacGPG2/bin
# set -Ua fish_user_paths /opt/X11/bin
# set -Ua fish_user_paths $HOME/.cargo/bin
# set -Ua fish_user_paths $HOME/.cabal/bin $HOME/.ghcup/bin

if status --is-interactive
    # wipe the paths to prevent dupes
    set -ge fish_user_paths
    # set a default editor for the shell
    set -gx EDITOR 'code'
    # export the IP to the env

    set -x IP (ipconfig getifaddr en0)
    # let GHCUP know where home is
    # set -q GHCUP_INSTALL_BASE_PREFIX[1]; or set -x GHCUP_INSTALL_BASE_PREFIX $HOME
    # add latest golang to path
    set -q GOROOT; or set GOROOT (go env GOROOT)/bin
    set -q GOPATH; or set GOPATH (go env GOPATH)/bin
    set -ga fish_user_paths $GOROOT
    set -ga fish_user_paths $GOPATH
    # add latest node to path and export
    set -ga fish_user_paths /usr/local/Cellar/node/(string sub -s 2 (node -v))/bin
    # add latest ruby to path
    source (rbenv init -|psub)
    # set -ga fish_user_paths $HOME/.rbenv/plugins/ruby-build/bin
    # source aliases
    source $HOME/.config/fish/functions/devmo.fish
    source $HOME/.config/fish/functions/git.fish
    # hook in direnv
    eval (direnv hook fish) > /dev/null
    starship init fish | source
    # set the stage
    if not set -q VIMRUNTIME
        # daymode
        Kamadhenu
    end
end
