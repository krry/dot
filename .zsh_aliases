source ~/.aliases

# zsh
alias zalias="vim ~/.aliases"
alias zshrc="vim ~/.zshrc"

# suffixes
alias -s {html,css,js,jsx,ts,tsx,scss,mdx,json}="code"
alias -s {md}="glow"

brin()
	brew install "$@"

brun()
	brew uninstall "$@"


cheat()
	curl "cheat.sh/$1"

nr()
	npm run "$1"

mkc()
  mkdir -p "$1" && cd "$1" || return 1

ls()
	exa "$@"

alias ll='ls -alF'
alias la='ls -a1l'
alias l='ls'
alias lg='ls -G'
alias lx='ls -x'

gco()
	git checkout $1
gcm()
	git commit -m $1
gcam()
	git commit -am $1

rezsh()
	source ~/.zshrc
